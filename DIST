#!/bin/sh
VERSION=`cat VERSION`
TGZ_DEST="$HOME/shiro.dreamhost.com/scheme/vault/"
MAN_DEST="$HOME/shiro.dreamhost.com/scheme/gauche/man/"
CHANGELOG_DEST="$HOME/shiro.dreamhost.com/scheme/gauche/ChangeLog.txt"

while [ $# -gt 0 ]; do
  case $1 in
    doc) docs=yes; shift ;;
    tgz) tgz=yes; shift ;;
    test) test=yes; shift ;;
    testclean) testclean=yes; shift ;;
    *) echo "DIST [doc][tgz][test][testclean]"; exit 0;;
  esac
done

if [ "$tgz" = "yes" ]; then
  rm -f DIST_EXCLUDE_X
  cat DIST_EXCLUDE > DIST_EXCLUDE_X
  (cd ..; find Gauche -name CVS -print -prune) >> DIST_EXCLUDE_X

  if [ -f Makefile ]; then make realclean; fi
  ./AUTOCONF
  configure
  (cd src; for stub in *.stub; do make `echo $stub | sed 's/\.stub/.c/'` ; done)
#  (cd doc; make html)
  (cd ext/charconv/data; make)
  make distclean
  escm -o INSTALL INSTALL.esc
  LANG=ja_JP escm -o INSTALL.eucjp INSTALL.esc
  (cd ..; tar c -v -f - -X Gauche/DIST_EXCLUDE_X Gauche | gzip -9 > Gauche-$VERSION.tgz)
  mv ../Gauche-$VERSION.tgz $TGZ_DEST
  cp ChangeLog $CHANGELOG_DEST
fi

if [ "$docs" = "yes" ]; then
  cp doc/gauche-ref.texi doc/extract doc/Makefile $MAN_DEST
  (cd $MAN_DEST; make htmls)
  rm -f $MAN_DEST/*.texi $MAN_DEST/extract $MAN_DEST/Makefile
fi

if [ "$test" = "yes" ]; then
  rm -rf ../test/Gauche
  cd ../test
  tar xzvf ~/shiro.dreamhost.com/scheme/vault/Gauche-$VERSION.tgz
  cd Gauche
  ./configure
  make
  make test
  make install
  cd ..
  for tt in primsyn module macro number dynwind object string srfi regexp system rfc parseopt; do
    gosh Gauche/test/$tt.scm >> test.log
  done
fi

if [ "$testclean" = "yes" ]; then
  rm -rf ../test/Gauche
  rm -rf ../test/test.log ../test/temp.o ../test/tmp1.o
fi
