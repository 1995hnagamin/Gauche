srcdir       = @srcdir@
top_builddir = @top_builddir@
top_srcdir   = @top_srcdir@

include ../Makefile.ext

SCM_CATEGORY = gauche

LIBFILES = libnet.$(SOEXT)
SCMFILES = net.scm
HDRFILES = gauche/net.h

OBJECTS = net_head.$(OBJEXT) net.$(OBJEXT) addr.$(OBJEXT) netdb.$(OBJEXT) netlib.$(OBJEXT) net_tail.$(OBJEXT)

GENERATED = Makefile 
XCLEANFILES = netlib.c net_head.c net_tail.c

all : $(LIBFILES)

libnet.$(SOEXT) : $(OBJECTS) 
	$(MODLINK) libnet.$(SOEXT) $(OBJECTS) $(EXT_LIBGAUCHE) $(LIBS)

netlib.c : netlib.stub

net_head.c net_tail.c :
	$(GAUCHE_CONFIG) --fixup-extension net

install : install-std


