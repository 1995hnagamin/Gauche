srcdir       = @srcdir@
top_builddir = @top_builddir@
top_srcdir   = @top_srcdir@

include ../Makefile.ext

SCM_CATEGORY = gauche

LIBFILES = threads.$(SOEXT)
SCMFILES = threads.scm

OBJECTS = threads_head.$(OBJEXT) threads.$(OBJEXT) mutex.$(OBJEXT) thrlib.$(OBJEXT) threads_tail.$(OBJEXT)

GENERATED = Makefile thrlib.c threads_head.c threads_tail.c

all : $(LIBFILES)

threads.$(SOEXT) : $(OBJECTS) 
	$(MODLINK) threads.$(SOEXT) $(OBJECTS) $(EXT_LIBGAUCHE)

thrlib.c : thrlib.stub

threads_head.c threads_tail.c :
	$(GAUCHE_CONFIG) --fixup-extension threads

install : install-std

