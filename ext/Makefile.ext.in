## Common stuff used in Makefiles of extensions
## $Id: Makefile.ext.in,v 1.18 2004-06-01 05:56:46 shirok Exp $
## 

SHELL       = @SHELL@
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@
libdir      = @libdir@
VPATH       = $(srcdir)

# These may be overridden by make invocators
DESTDIR  =
CC       = @CC@
AR       = @AR@
LIBS     = @LIBS@
CFLAGS   = @CFLAGS@ @SHLIB_SO_CFLAGS@
CPPFLAGS = @CPPFLAGS@
LDFLAGS  = @LOCAL_LIB@ @SHLIB_SO_LDFLAGS@

# These are set by configure
DEFS     = @DEFS@
OPTFLAGS = @OPTFLAGS@
INCLUDES = -I$(srcdir) -I$(top_srcdir)/src -I$(top_srcdir)/gc/include @LOCAL_INC@ $(EXTRA_INCLUDES)
OBJEXT   = @OBJEXT@
EXEEXT   = @EXEEXT@
SOEXT    = @SHLIB_SO_SUFFIX@

# Main definition of compilation commands
COMPILE   = $(CC) $(DEFS) $(INCLUDES) $(CPPFLAGS) $(CFLAGS) $(OPTFLAGS)
CCLD      = $(CC)
LINK      = $(CCLD) $(CFLAGS) $(LDFLAGS)
MODLINK   = $(CCLD) $(CFLAGS) $(LDFLAGS)

GOSH           = $(top_builddir)/src/gosh -ftest
GAUCHE_CONFIG  = $(SHELL) $(top_srcdir)/src/gauche-config
GAUCHE_INSTALL = $(GOSH) $(top_srcdir)/src/gauche-install
INSTALL_TYPE   = sys

EXT_LIBGAUCHE  = -L$(top_builddir)/src @EXT_LIBGAUCHE@

GAUCHE_INCDIR  = $(DESTDIR)`$(GAUCHE_CONFIG) --$(INSTALL_TYPE)incdir`
GAUCHE_LIBDIR  = $(DESTDIR)`$(GAUCHE_CONFIG) --$(INSTALL_TYPE)libdir`
GAUCHE_ARCHDIR = $(DESTDIR)`$(GAUCHE_CONFIG) --$(INSTALL_TYPE)archdir`

LIB_INSTALL_DIR  = @libdir@
BIN_INSTALL_DIR  = @bindir@
DATA_INSTALL_DIR = @datadir@

CLEANFILES = core *~ test.log test.out

.SUFFIXES:
.SUFFIXES: .S .c .o .obj .s .stub

.PHONY: default all check install install-check clean distclean \
        maintainer-clean install-std uninstall link unlink

.c.obj:
	$(COMPILE) -c `cygpath -w $<`

.c.o:
	$(COMPILE) -c $<

.s.o:
	$(COMPILE) -c $<

.S.o:
	$(COMPILE) -c $<

.stub.c :
	$(GOSH) genstub $<

default : all link

check : all
	@rm -f test.log
	$(GOSH) -I. test.scm > test.log

install-check :
	${bindir}/gosh test.scm

clean : unlink
	rm -rf $(CLEANFILES) *.$(OBJEXT) *.$(SOEXT)

distclean : clean
	rm -rf $(GENERATED)

maintainer-clean : clean
	rm -rf $(GENERATED)

install-std : all
	$(GAUCHE_INSTALL) -m 444 -T $(GAUCHE_INCDIR)/gauche $(HDRFILES)
	$(GAUCHE_INSTALL) -m 444 -T $(GAUCHE_LIBDIR)/$(SCM_CATEGORY) $(SCMFILES)
	$(GAUCHE_INSTALL) -m 555 -T $(GAUCHE_ARCHDIR) $(LIBFILES) 

uninstall :

link :
	-@$(GOSH) ../xlink -l -g "$(SCM_CATEGORY)" \
	  -b $(top_builddir) -s $(top_srcdir) $(LIBFILES) $(SCMFILES)

unlink :
	-@$(GOSH) ../xlink -u -g "$(SCM_CATEGORY)" \
	  -b $(top_builddir) -s $(top_srcdir) $(LIBFILES) $(SCMFILES)
