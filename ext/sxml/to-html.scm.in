(define-module sxml.to-html
  (use text.parse)
  (use text.html-lite)
  (use sxml.adaptor)
  (use sxml.tree-trans)
  (export SXML->HTML))
(select-module sxml.to-html)

;; Hack: a procedure "make-char-quotator" is used in the original code
;; to generate a procedure that does escaping for HTML.   Since it is
;; used only for that purpose, we can just replace it to what we have
;; in text.html-lite module.
(define (make-char-quotator . _) html-escape-string)

