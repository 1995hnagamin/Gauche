srcdir       = @srcdir@
top_builddir = @top_builddir@
top_srcdir   = @top_srcdir@

include ../Makefile.ext

SCM_CATEGORY = rfc

LIBFILES = md5-lib.$(SOEXT) sha-lib.$(SOEXT)
SCMFILES = md5.scm sha1.scm sha.scm

GENERATED = Makefile
XCLEANFILES = md5.scm md5-lib.c sha.scm sha-lib.c *_head.c *_tail.c

EXTRA_INCLUDES = -I$(srcdir)/../uvector

all : $(LIBFILES)

md5_OBJECTS = md5_head.$(OBJEXT) md5-lib.$(OBJEXT) md5c.$(OBJEXT) md5_tail.$(OBJEXT)

md5-lib.$(SOEXT) : $(md5_OBJECTS) 
	$(MODLINK) md5-lib.$(SOEXT) $(md5_OBJECTS) @EXT_UVECTOR@ $(EXT_LIBGAUCHE) $(LIBS)

md5.scm md5-lib.c : md5-lib.scm
	$(PRECOMP) --ext-module=md5.scm md5-lib.scm

sha_OBJECTS = sha_head.$(OBJEXT) sha-lib.$(OBJEXT) sha2.$(OBJEXT) sha_tail.$(OBJEXT)

$(sha_OBJECTS) : sha2.h

sha-lib.$(SOEXT) : $(sha_OBJECTS)
	$(MODLINK) sha-lib.$(SOEXT) $(sha_OBJECTS) @EXT_UVECTOR@ $(EXT_LIBGAUCHE) $(LIBS)

sha.scm sha-lib.c : sha-lib.scm
	$(PRECOMP) --ext-module=sha.scm sha-lib.scm

md5_head.c md5_tail.c :
	$(GAUCHE_CONFIG) --fixup-extension md5

sha_head.c sha_tail.c :
	$(GAUCHE_CONFIG) --fixup-extension sha

install : install-std


