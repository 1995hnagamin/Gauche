srcdir       = @srcdir@
top_builddir = @top_builddir@
top_srcdir   = @top_srcdir@

include ../Makefile.ext

SCM_CATEGORY = gauche

LIBFILES = fcntl.$(SOEXT)
SCMFILES = fcntl.scm

OBJECTS = fcntl_head.$(OBJEXT) fcntl.$(OBJEXT) fcntlib.$(OBJEXT) fcntl_tail.$(OBJEXT)

GENERATED = Makefile
XCLEANFILES = fcntlib.c fcntl_head.c fcntl_tail.c

all : $(LIBFILES)

fcntl.$(SOEXT) : $(OBJECTS) 
	$(MODLINK) fcntl.$(SOEXT) $(OBJECTS) $(EXT_LIBGAUCHE) $(LIBS)

fcntlib.c : fcntlib.stub

fcntl_head.c fcntl_tail.c :
	$(GAUCHE_CONFIG) --fixup-extension fcntl

install : install-std

