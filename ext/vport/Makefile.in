srcdir       = @srcdir@
top_builddir = @top_builddir@
top_srcdir   = @top_srcdir@

include ../Makefile.ext

SCM_CATEGORY = gauche

LIBFILES = vport.$(SOEXT)
SCMFILES = vport.scm

OBJECTS = vport_head.$(OBJEXT) vport.$(OBJEXT) vportlib.$(OBJEXT) vport_tail.$(OBJEXT)

GENERATED = Makefile
XCLEANFILES = vportlib.c vport_head.c vport_tail.c

EXTRA_INCLUDES = -I$(srcdir)/../uvector

all : $(LIBFILES)

vport.$(SOEXT) : $(OBJECTS) 
	$(MODLINK) vport.$(SOEXT) $(OBJECTS) @EXT_UVECTOR@ $(EXT_LIBGAUCHE) $(LIBS)

vportlib.c : vportlib.stub

vport_head.c vport_tail.c :
	$(GAUCHE_CONFIG) --fixup-extension vport

install : install-std

