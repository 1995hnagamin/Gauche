srcdir       = @srcdir@
top_builddir = @top_builddir@
top_srcdir   = @top_srcdir@

include ../Makefile.ext

SCM_CATEGORY = gauche

LIBFILES = syslog.$(SOEXT)
SCMFILES = syslog.scm

OBJECTS = syslog_head.$(OBJEXT) syslog.$(OBJEXT) syslog_tail.$(OBJEXT)

GENERATED = Makefile
XCLEANFILES = syslog.c syslog_head.c syslog_tail.c

all : $(LIBFILES)

syslog.$(SOEXT) : $(OBJECTS) 
	$(MODLINK) syslog.$(SOEXT) $(OBJECTS) $(EXT_LIBGAUCHE) $(LIBS)

syslog.c : syslog.stub

syslog_head.c syslog_tail.c :
	$(GAUCHE_CONFIG) --fixup-extension syslog

install : install-std


