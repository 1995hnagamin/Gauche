srcdir       = @srcdir@
top_builddir = @top_builddir@
top_srcdir   = @top_srcdir@

include ../Makefile.ext

SCM_CATEGORY = gauche

LIBFILES = termios.$(SOEXT)
SCMFILES = termios.scm

OBJECTS = termios_head.$(OBJEXT) termios.$(OBJEXT) termiolib.$(OBJEXT) termios_tail.$(OBJEXT)

GENERATED = Makefile termiolib.c termios_head.c termios_tail.c

EXTRA_INCLUDES = -I$(srcdir)/../uvector

all : $(LIBFILES)

termios.$(SOEXT) : $(OBJECTS) 
	$(MODLINK) termios.$(SOEXT) $(OBJECTS) @EXT_UVECTOR@ $(EXT_LIBGAUCHE) $(LIBS)

termiolib.c : termiolib.stub

termios_head.c termios_tail.c :
	$(GAUCHE_CONFIG) --fixup-extension termios

install : install-std

