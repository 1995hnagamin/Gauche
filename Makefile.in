
all : gc/libgc.a src/gosh

gc/libgc.a :
	cd gc; $(MAKE) CC=@CC@

src/gosh : gc/libgc.a
	cd src; $(MAKE)

clean :
	rm -rf core *~
	cd gc; $(MAKE) clean
	cd src; $(MAKE) clean

allclean : clean
	rm -rf Makefile src/Makefile config.cache config.log config.status

install :
	cd src; $(MAKE) install

realclean : allclean
	rm -rf configure

