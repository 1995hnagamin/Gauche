
all : gc/libgc.a src/gosh

gc/libgc.a :
	cd gc; $(MAKE) CC=@CC@

src/gosh : gc/libgc.a
	cd src; $(MAKE)

clean :
	rm -rf core *~
	cd gc; $(MAKE) clean
	cd src; $(MAKE) clean
	cd test; $(MAKE) clean

distclean : clean
	cd src; $(MAKE) distclean
	rm -rf Makefile config.cache config.log config.status

install :
	cd src; $(MAKE) install

realclean : distclean
	cd src; $(MAKE) realclean
	rm -rf configure

