SCM = snow
CC = @CC@
LIBS = @LIBS@ -lm
DEFS = @DEFS@
CFLAGS = -DSCM_INSTALL_DIR=\"$(SCM_INSTALL_DIR)\" -g -O2 -I. -I../gc -I../gc/include
#CFLAGS = -O2 -I. -I../gc -I../gc/include
LDFLAGS = -rdynamic		# TODO: need to check by configure
AR = ar

prefix = @prefix@
exec_prefix = @exec_prefix@

GENERATED = stdlib.c extlib.c syslib.c
CONFIG_GENERATED = Makefile gauche-config gauche/config.h

HEADER_INSTALL_DIR = @includedir@
SUBHEADER_INSTALL_DIR = @includedir@/gauche
LIB_INSTALL_DIR = @libdir@
BIN_INSTALL_DIR = @bindir@
SCM_INSTALL_DIR = @libdir@/gauche/@GAUCHE_VERSION@/lib

INSTALL_HEADERS = gauche.h ../gc/gc.h 
INSTALL_SUBHEADERS = gauche/config.h gauche/char_euc_jp.h gauche/vm.h \
                     gauche/vminsn.h gauche/predef-syms.h
INSTALL_LIBS = libgauche.a
INSTALL_BINS = gosh gauche-config
INSTALL_SCMS = genstub gauche-init.scm

INSTALL=@INSTALL@

GCLIB = ../gc/gc.a

OBJS = core.o vm.o compile.o macro.o error.o class.o boolean.o char.o \
       string.o list.o port.o hash.o write.o read.o vector.o \
       symbol.o keyword.o \
       module.o proc.o number.o bignum.o io.o load.o promise.o repl.o \
       system.o stdlib.o extlib.o syslib.o

.SUFFIXES: .stub

.stub.c:
	$(SCM) genstub $<

HDRS = gauche.h

all : gosh

gosh : libgauche.a main.o
	$(CC) $(CFLAGS) $(LDFLAGS) -o gosh main.o -L. -lgauche $(LIBS)

$(OBJS) main.o : $(HDRS)

stdlib.c : stdlib.stub genstub 
extlib.c : extlib.stub genstub
syslib.c : syslib.stub genstub

libgauche.a : $(OBJS) $(GCLIB)
	$(AR) x $(GCLIB)
	$(AR) cr libgauche.a $(OBJS) `$(AR) t $(GCLIB)`

clean :
	rm -f core gosh *.o *~ *.a gauche/*~

distclean : clean
	rm -f $(CONFIG_GENERATED)

realclean : clean
	rm -f $(CONFIG_GENERATED) $(GENERATED)

install : all
	for f in $(INSTALL_HEADERS); do \
	  $(INSTALL) -m 444 $$f $(HEADER_INSTALL_DIR); \
	done
	$(INSTALL) -d $(SUBHEADER_INSTALL_DIR)
	for f in $(INSTALL_SUBHEADERS); do \
	  $(INSTALL) -m 444 $$f $(SUBHEADER_INSTALL_DIR); \
	done
	for f in $(INSTALL_LIBS); do \
	  $(INSTALL) -m 444 $$f $(LIB_INSTALL_DIR); \
	done
	for f in $(INSTALL_BINS); do \
	  $(INSTALL) -m 555 $$f $(BIN_INSTALL_DIR); \
	done
	$(INSTALL) -d $(SCM_INSTALL_DIR)
	for f in $(INSTALL_SCMS); do \
	  $(INSTALL) -m 444 $$f $(SCM_INSTALL_DIR); \
	done



